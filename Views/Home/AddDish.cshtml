@model Dish

<h1>Add a new Dish!</h1>

<a href="/viewchefsDishes" class="btn btn-danger">Home</a>


<div>
    <form action="/addnewDish" method="post">
        <div>
            <label>Name of Dish</label>
            <input asp-for="dishName">
            <span asp-validation-for="dishName" class="text-danger"></span>
        </div>
        <div>
            <label># of Calories</label>
            <input asp-for="numCal">
            <span asp-validation-for="numCal" class="text-danger"></span>
        </div>
        <div>
            <label>Tastiness</label>
            <select asp-for="taste">
                <option hidden selected disabled>Level</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="taste" class="text-danger"></span>
        </div>
        <div>
            <label for="Description">Description</label>
            <textarea asp-for="Description" cols="20" rows="5"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div>
            <label for="ChefId">Chef</label>
            <select asp-for="ChefId" >
                @{
                    foreach (Chef c in @ViewBag.AllChefs)
                    {
                        <option value="@c.ChefId">@c.firstName @c.lastName</option>
                    }
                }
            </select>
        </div>
        <input type="submit" value="Add Dish">
    </form>
</div>